#!/bin/bash

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

# Sanity check command line options
usage() {
    echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
    usage
    exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
    "create")
        sqlite3 data/data.sqlite3 < sql/schema.sql
        sqlite3 data/data.sqlite3 < sql/data.sql
        ;;

    "destroy")
        rm data/data.sqlite3
        ;;

    "reset")
        rm data/data.sqlite3
        sqlite3 data/data.sqlite3 < sql/schema.sql
        sqlite3 data/data.sqlite3 < sql/data.sql
        ;;

    "dump")
        sqlite3 -batch -line data/data.sqlite3 'SELECT * FROM nafilahs'
        ;;

    *)
        usage
        exit 1
        ;;
esac
